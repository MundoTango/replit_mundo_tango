<button id="checkout-button">Subscribe</button>

<script>
    const stripe = Stripe('<%= process.env.STRIPE_PUBLISHABLE_KEY %>'); // Replace with your Stripe publishable key from environment variables

    document.getElementById('checkout-button').addEventListener('click', async () => {
        const response = await fetch('/create-checkout-session', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ priceId: 'price_xxxxxxx' }), // Replace with your price ID
        });

        const session = await response.json();

        // Redirect to Stripe Checkout
        const { error } = await stripe.redirectToCheckout({
            sessionId: session.id,
        });

        if (error) {
            console.error('Error redirecting to Stripe:', error);
        }
    });
</script>
